        "body": [
            "import { PrefixCommandBuilder } from \"vimcord\";\n",

            "export default new PrefixCommandBuilder({",
            "    name: \"${1:${TM_FILENAME_BASE/(.*)\\.prefix/${1:/downcase}/}}\",",
            "    description: \"${2}\",\n",

            "   async execute(client, message) {",
            "       ${0:// Reply to the message\n        return message.reply({ content: \"Hello world!\" \\});}",
            "   }",
            "});"
        ]
